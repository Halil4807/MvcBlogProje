@using EntityLayer.Concrete
@model List<Admin>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Adminler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li><a href="/Authorization/AddAdmin" class="btn btn-success">Yeni Admin Ekle</a></li>&nbsp;&nbsp;
                    <li class="breadcrumb-item">Authorization</li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">


            <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

            <br />
            <br />

            <div class="col-md-11" style="position: relative; margin: auto;">
                <h3>Kategori Tablosu</h3>
                <br />
                <br />
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Kullanıcı Mail</th>
                        <th>Yetki</th>
                        <th>Status</th>
                        <th>Pasif Yap</th>
                        <th>Yetki Değiştir</th>
                    </tr>
                    @foreach (var item in Model)
                    {
        <tr>
            <th>@item.AdminID</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminMail</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>
            <td width="8%" align="center"><a href="/Authorization/DeleteAdmin/@item.AdminID" class="btn btn-danger">Pasif Yap</a></td>
            <td width="12%" align="center"><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Yetki Değiştir</a></td>
        </tr>
}
                    <tr>
                    </tr>
                </table>
                @*@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }), new PagedListRenderOptions { LiElementClasses = new List<string> { "page-link" } })*@
                <a href="/Authorization/AddAdmin" class="btn btn-success">Admin Ekle</a>
            </div>

            <br />

        </div>
    </div>
    <!-- /.card -->
</section>