@using System.Web

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>İstatistikler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li><a href="/Writer/AddWriter" class="btn btn-success">Yazar Ekle</a></li>&nbsp;&nbsp;
                    <li class="breadcrumb-item">Istatistic</li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">

            <table class="table table-hover table-bordered">
                <tr>
                    <th>Numara</th>
                    <th>İstatistik</th>
                    <th>Sonucu</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>Toplam Kategori Sayısı</td>
                    <td>@ViewBag.categoriler</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Yazılım'a ait Yazıların Sayısı</td>
                    <td>@ViewBag.yazılımcount</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Adında "a" geçen yazarların Sayısı</td>
                    <td>@ViewBag.yazarsay</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>En fazla yazıya sahip Kategori</td>
                    <td>
                        Kategori Adı: @ViewBag.encokcategory <br />   
                        Başlık Sayısı: @ViewBag.encokcategorysayisi
                    </td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>Kagerisi "True" ve "False" olanların sayısı</td>
                    <td>True= @ViewBag.categorytrue<br />    False=@ViewBag.categoryfalse<br />    Fark=@ViewBag.categorydifference</td>
                </tr>
            </table>
        </div>
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->