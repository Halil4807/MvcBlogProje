@model EntityLayer.Concrete.Content

@{ ViewBag.Title = "NewContent";
                Layout = "~/Views/Shared/_WriterLayout.cshtml"; }

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><b>@ViewBag.HeadingName</b>'e İçerik Ekleme</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Heading</li>
                    <li class="breadcrumb-item active">AddHeading</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body ">
            @using (Html.BeginForm("NewContent", "WriterPanelContent", FormMethod.Post))
            {
            <div class="form-group col-md-9" style="padding-left: 45px">
                @Html.Label("Başlık Id:")
                <input type="text" name="HeadingID" value="@ViewBag.HeadingId" hidden/>

                @Html.Label("Yazı İçeriği:")
                @Html.TextAreaFor(x => x.ContentValue, 10, 70, new { @class = "form-control" })
                <p style="color:red">@Html.ValidationMessageFor(x => x.ContentValue)</p>

                <div style="text-align: center">
                    <button class="btn btn-success">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Yazı Ekle&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
                    <a href="/WriterPanel/AllHeading" class="btn btn-secondary">Geri</a>
                </div>
            </div>
            }
        </div>
    </div>
        <!-- /.card -->
</section>
<!-- /.content -->