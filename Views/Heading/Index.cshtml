@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Başlıklar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Heading</li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Adı</th>
                        <th>Kategorisi</th>
                        <th>Yazarı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.HeadingID</th>
                            <td>@item.HeadingName</td>
                            <td>@item.Category.CategoryName</td>
                            <td width="8%" align="center">@item.Writer.WriterName @item.Writer.WriterSurName</td>
                            <td width="8%" align="center"><a href="/Heading/DeleteHeading/@item.HeadingID" class="btn btn-danger">Sil</a></td>
                            <td width="8%" align="center"><a href="/Heading/EditHeading/@item.HeadingID" class="btn btn-warning">Güncelle</a></td>
                        </tr>
                    }
                    <tr>
                    </tr>
                </table>
            </div>
            <a href="/Heading/AddHeading" class="btn btn-success">Başlık Ekle</a><br /><br />
        </div>
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->