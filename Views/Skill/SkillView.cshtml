@using EntityLayer.Concrete
@model List<Skill>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>


    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/dist/skill/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/dist/skill/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/dist/skill/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Skills Profile Widget</h1>
        <div class="main-info w3l">
            <div class="main-row">
                <a href="/Skill/Index" class="btn btn-success" role="button"><font color="white">Yetenek Sayfasına Git</font></a>
                <!-- main-row-one -->
                <div class="profile-grid logo wthree">
                    <img src="/dist/skill/images/img1.jpg" alt="">
                    <h2>Halil ÖZTÜRK </h2>
                    <p>Bu proje outube videosundan referans alınarak hazırlanmıştır.</p>

                </div>
                <h3 class="title">Skills</h3>
                <div class="col-md-6 skills-right bar_group">

                    @foreach (var item in Model)
                    {
                        <div class='bar_group__bar thin' label='@item.SkillName &nbsp;&nbsp; @item.SkillValue%' value='@item.SkillValue'></div>
                    }
                </div>
                <!--bar-js-->
                <script src="~/dist/skill/js/bars.js"></script>
                <div class="clear"> </div>
            </div>
        </div>
        <!-- copyright -->
        <div class="copyright">
            <p> © 2023</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>