@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<br />
<br />

<div class="col-md-11" style="position: relative; margin: auto;">
    <h3>Kategori Tablosu</h3>
    <br />
    <br />
    <table class="table table-hover table-bordered">
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td width="8%" align="center">@item.CaterogyStatus</td>
                <td width="8%" align="center"><a href="#" class="btn btn-danger">Sil</a></td>
                <td width="8%" align="center"><a href="#" class="btn btn-warning">Güncelle</a></td>
                <td width="8%" align="center"><a href="#" class="btn btn-primary">Başlıklar</a></td>
            </tr>
        }
        <tr>
        </tr>
    </table>
    <a href="/AdminCategory/AddCategory" class="btn btn-success">Kategori Ekle</a>
</div>

<br />