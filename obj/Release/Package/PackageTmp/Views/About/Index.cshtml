@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{  string durumcolor = "";
    string durumbutton = "";
    string durumbuttoncolor = "";}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Hakkımızda</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li><button class="btn btn-success" data-toggle="modal" data-target="#ModalAboutAdd">Yeni Hakkımızda Yazı Girişi</button></li>&nbsp;&nbsp;
                    <li class="breadcrumb-item">About</li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            @Html.Action("AddAboutPartial", "About")

            <!-- Tablo Kod satırının başlanıcı-->
            <div class="row">
                <div class="col-12">
                    <!-- /.card -->
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-striped projects table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>About Detay 1</th>
                                        <th>About Detay 2</th>
                                        <th>About Görsel 1</th>
                                        <th>About Görsel 2</th>
                                        <th>Durumu</th>
                                        <th width="15%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        
                                    <tr>
                                        <td>@item.AboutDetails1</td>
                                        <td>@item.AboutDetails2</td>
                                        <td>@item.AboutImage1</td>
                                        <td>@item.AboutImage2</td>
                                        @if (item.AboutStatus == true)
                                        {
                                        durumcolor = "success";
                                        }
                                        else
                                        {
                                        durumcolor = "danger";
                                        }
                                        <td class="project-state">
                                            <span class="badge badge-@durumcolor">
                                                @if (item.AboutStatus)
                                                {
                                                    <font>Aktif</font> }
                                                else
                                                {
                                                    <font>Pasif</font>}
                                            </span>
                                        </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-info btn-sm" href="/About/EditAbout/@item.AboutID">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Düzenle
                                            </a>

                                            @if (item.AboutStatus)
                                            {
                                                durumbuttoncolor = "danger";
                                                durumbutton = "fas fa-trash";
                                            }
                                            else
                                            {
                                                durumbuttoncolor = "success";
                                                durumbutton = "fas fa-plus-square";
                                            }
                                            <a class="btn btn-@durumbuttoncolor btn-sm" href="/About/DeleteAbout/@item.AboutID">
                                                <i class="@durumbutton">
                                                </i>
                                                @if (item.AboutStatus)
                                                {
                                                    <font>Pasif Yap</font> }
                                                else
                                                {
                                                    <font>Aktif Yap</font>}
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- Tablo Kod satırının bitişi-->
        </div>
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->