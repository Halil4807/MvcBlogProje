@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "HeadingReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //Layout = null;
}

<head>
    <title>MVC Blog Proje Raporlama Sayfası</title>
</head>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Raporlama</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Heading</li>
                    <li class="breadcrumb-item active">HeadingReport</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Başlık Id</th>
                        <th>Adı</th>
                        <th>Tarih</th>
                        <th>Yazar</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.HeadingID</td>
                            <td>@x.HeadingName</td>
                            <td>@x.HeadingDate</td>
                            <td>@x.Writer.WriterName @x.Writer.WriterSurName</td>
                            <td>@x.Category.CategoryName</td>
                            <td>@x.HeadingStatus</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->