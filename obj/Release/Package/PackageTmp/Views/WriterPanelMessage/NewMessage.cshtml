@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yeni Mesaj Sayfası</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">WriterPanelMessage</a></li>
                    <li class="breadcrumb-item active">NewMessage</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        @Html.Action("WriterMailMenuPartial", "WriterPanelMessage")
        <!-- /.col -->
        <div class="col-md-9">
            @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
            {
                @Html.Hidden("SenderMail",@Session["WriterMail"])
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Yeni Mesaj Oluştur</h3>
    </div> <!-- /.card-header -->
    <div class="card-body">
        <div class="form-group">
            @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control", @placeholder = "Alıcı Adı:" })
            <p style="color:red">@Html.ValidationMessageFor(x => x.ReceiverMail)</p>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Konu:" })
            <p style="color:red">@Html.ValidationMessageFor(x => x.Subject)</p>
        </div>
        <div class="form-group">
            <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px">
</textarea>
        </div>
        <div class="form-group">
            <div class="btn btn-default btn-file">
                <i class="fas fa-paperclip"></i> Dosya Ekle
                <input type="file" name="attachment">
            </div>
            <p class="help-block">Max. 32MB</p>
        </div>
    </div> <!-- /.card-body -->
    <div class="card-footer">
        <div class="float-right">
            <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
        </div>
        <a href="/WriterPanelMessage/Index" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</a>
    </div> <!-- /.card-footer -->
</div> <!-- /.card -->}
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>