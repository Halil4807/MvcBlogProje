@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yetenekler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Skill</li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">


            <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

            <a href="/Skill/SkillView" class="btn btn-success">&nbsp;&nbsp;Yetenek Görünümüne Git&nbsp;&nbsp;</a>
            <br />
            <br />

            <div class="col-md-11" style="position: relative; margin: auto;">
                <h3>Kategori Tablosu</h3>
                <br />
                <br />
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Yetenek Adı</th>
                        <th>Yetenek Değeri</th>
                        <th>Yetenek Düzenle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.SkillID</th>
                            <td>@item.SkillName</td>
                            <td>@item.SkillValue</td>
                            <td width="12%" align="center"><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-warning">Yetki Düzenle</a></td>
                        </tr>
                    }
                    <tr>
                    </tr>
                </table>
            </div>

            <br />

        </div>
    </div>
    <!-- /.card -->
</section>