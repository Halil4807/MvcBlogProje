@using EntityLayer.Concrete
@model List<Heading>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
@{ string color = "danger";
    string durumcolor = "";
    string durumbutton = "";
    string durumbuttoncolor = "";}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Başlıklar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li><a href="/Heading/AddHeading" class="btn btn-success"> Başlık Ekle </a> </li>  &nbsp;&nbsp;
                    <li class="breadcrumb-item">Heading</li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div>
    @*/.container-fluid*@
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-12">
                    <!-- /.card -->

                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-striped projects table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 3%">
                                            #
                                        </th>
                                        <th style="width: 20%">
                                            Başlık Adı
                                        </th>
                                        <th style="width: 10%">
                                            Oluşturan Yazar
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                            Kategori
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                            Durum
                                        </th>
                                        <th style="width: 20%" class="text-center">
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (item.Category.CategoryName == "Tiyatro")
                                        {
                                            color = "warning";
                                        }
                                        else if (item.Category.CategoryName == "Spor")
                                        {
                                            color = "success";
                                        }
                                        else if (item.Category.CategoryName == "Kitap")
                                        {
                                            color = "info";
                                        }
                                        else if (item.Category.CategoryName == "Seyahat")
                                        {
                                            color = "secondary";
                                        }
                                        else if (item.Category.CategoryName == "Eğitim")
                                        {
                                            color = "primary";
                                        }
                                        else
                                        {
                                            color = "danger";
                                        }
                                        if (item.HeadingStatus == true)
                                        {
                                            durumcolor = "success";
                                        }
                                        else
                                        {
                                            durumcolor = "danger";
                                        }
                        <tr>
                            <td>
                                @item.HeadingID
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    @item.HeadingDate.ToString("dd-MMM-yyyy HH-mm")
                                    @*@(((DateTime) item.HeadingDate).ToString("dd-MMM-yyyy HH-mm"))*@
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-@color">@item.Category.CategoryName</span>
                            </td>

                            <td class="project-state">
                                <span class="badge badge-@durumcolor">
                                    @if (item.HeadingStatus)
                                    {
                    <font>Aktif</font> }
                else
                {
<font>Pasif</font>}
                                </span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                    <i class="fas fa-folder">
                                    </i>
                                    Yazılar
                                </a>
                                <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>

                                @if (item.HeadingStatus)
                                {
                                    durumbuttoncolor = "danger";
                                    durumbutton = "fas fa-trash";
                                }
                                else
                                {
                                    durumbuttoncolor = "success";
                                    durumbutton = "fas fa-plus-square";
                                }
                                <a class="btn btn-@durumbuttoncolor btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                    <i class="@durumbutton">
                                    </i>
                                    @if (item.HeadingStatus)
                                    {
                    <font>Pasif Yap</font> }
                else
                {
<font>Aktif Yap</font>}
                                </a>
                            </td>
                        </tr>}

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th style="width: 3%">
                                            #
                                        </th>
                                        <th style="width: 20%">
                                            Başlık Adı
                                        </th>
                                        <th style="width: 10%">
                                            Oluşturan Yazar
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                            Kategori
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                            Durum
                                        </th>
                                        <th style="width: 20%" class="text-center">
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
