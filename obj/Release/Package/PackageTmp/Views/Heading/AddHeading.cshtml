@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yeni Başlık Ekleme</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Heading</li>
                    <li class="breadcrumb-item active">AddHeading</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body ">
            @using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
            {
            <div class="form-group col-md-6" style="padding-left: 45px">
                @Html.Label("Başlık Adı:")
                @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                <p style="color:red">@Html.ValidationMessageFor(x => x.HeadingName)</p>

                @Html.Label("Kategori:")
                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoriler, "Kategori Seçiniz", new { @class = "form-control" })
                <p style="color:red">@Html.ValidationMessageFor(x => x.CategoryID)</p>

                @Html.Label("Yazar :")
                @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.yazarlar, "Yazar Seçiniz!!!", new { @class = "form-control" })
                <p style="color:red">@Html.ValidationMessageFor(x => x.WriterID)</p>


                <div style="text-align: center">
                    <button class="btn btn-success">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Başlık Ekle&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
                    <a href="/Heading/Index" class="btn btn-secondary">Geri</a>
                </div>
            </div>
            }
        </div>
    </div>
        <!-- /.card -->
</section>
<!-- /.content -->