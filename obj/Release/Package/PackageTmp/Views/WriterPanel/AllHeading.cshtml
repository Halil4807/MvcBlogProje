@using EntityLayer.Concrete
@model List<Heading>
@{ ViewBag.Title = "AllHeading";
                Layout = "~/Views/Shared/_WriterLayout.cshtml"; }


@{ string color = "danger";}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Başlıklar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item active">AllHeadings</li>
                </ol>
            </div>
        </div>
    </div>
    @*/.container-fluid*@
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-12">
                    <!-- /.card -->

                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-striped projects table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 3%">
                                            #
                                        </th>
                                        <th style="width: 20%">
                                            Başlık Adı
                                        </th>
                                        <th style="width: 10%">
                                            Oluşturan Yazar
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                            Kategori
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (item.Category.CategoryName == "Tiyatro")
                                        {
                                            color = "warning";
                                        }
                                        else if (item.Category.CategoryName == "Spor")
                                        {
                                            color = "success";
                                        }
                                        else if (item.Category.CategoryName == "Kitap")
                                        {
                                            color = "info";
                                        }
                                        else if (item.Category.CategoryName == "Seyahat")
                                        {
                                            color = "secondary";
                                        }
                                        else if (item.Category.CategoryName == "Eğitim")
                                        {
                                            color = "primary";
                                        }
                                        else
                                        {
                                            color = "danger";
                                        }
                        <tr>
                            <td>
                                @item.HeadingID
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    @item.HeadingDate.ToString("dd-MMM-yyyy HH-mm")
                                    @*@(((DateTime) item.HeadingDate).ToString("dd-MMM-yyyy HH-mm"))*@
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-@color">@item.Category.CategoryName</span>
                            </td>

                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Home/Headings/@item.HeadingID">
                                    <i class="fas fa-folder">
                                    </i>
                                    Yazılar
                                </a>
                                <a class="btn btn-info btn-sm" href="/WriterPanelContent/NewContent/@item.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Yeni Yazı
                                </a>
                            </td>
                        </tr>}

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
